<%= form_with(model: todo, local: true) do |form| %>
  <%= render "partials/form_errors", object: todo %>
  <div class="form-group">
    <%= form.label :todo_type_id %>
    <%= form.select :todo_type_id, options_for_select(todo_type_list, selected: todo.todo_type_id), {prompt: "Select type of Todo"}, {class: "form-control rounded-0"} %>
  </div>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control rounded-0" %>
  </div>

  <div class="form-group">
    <%= form.label :due_date %>
    <%= form.text_field :due_date, class: "form-control rounded-0" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary rounded-0" %>
    <%= link_to 'Back', todos_path, class: "btn btn-outline-primary rounded-0" %>
  </div>
<% end %>
