<div class="container">
  <div class="row">
    <div class="col-md-8 mx-md-auto">
      <div class="card shadow rounded-0 mt-5 mb-5">
        <div class="card-body">
          <h2 class="text-center mb-4">Edit Account</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>

            <div class="form-group row">
              <div class="col-md-6">
                <%= f.label :first_name %>
                <%= f.text_field :first_name, class: "form-control rounded-0" %>
              </div>
              <div class="col-md-6">
                <%= f.label :last_name %>
                <%= f.text_field :last_name, class: "form-control rounded-0" %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-md-6">
                <%= f.label :username %>
                <%= f.text_field :username, class: "form-control rounded-0" %>
              </div>
              <div class="col-md-6">
                <%= f.label :contact_number %>
                <%= f.text_field :contact, class: "form-control rounded-0" %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-md-6">
                <%= f.label :email %>
                <%= f.email_field :email, class: "form-control rounded-0" %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-12">
                <p class="lead">leave blank if you don't want to change it</p>
              </div>
              <div class="col-md-6">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters min)</em>
                <% end %>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control rounded-0" %>
              </div>
              <div class="col-md-6">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control rounded-0" %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-12">
                <p class="lead">We need your current password to confirm your changes</p>
              </div>
              <div class="col-md-6">
                <%= f.label :current_password %>
                <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control rounded-0" %>
              </div>
            </div>

            <div class="form-group text-center mt-4">
              <%= f.submit "Update Account", class: "btn btn-success rounded-0" %>
            </div>
          <% end %>
          <div class="text-center">
            <h6 class="font-weight-bold mt-3">I am not happy :</h6>
            <p><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger rounded-0" %></p>
            <%= link_to "Back", :back, class: "btn btn-primary rounded-0" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
