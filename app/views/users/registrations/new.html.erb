<div class="container">
  <div class="row">
    <div class="col-md-8 mx-md-auto">
      <div class="card shadow rounded-0 mt-5 mb-5">
        <div class="card-body">
          <h2 class="text-center mb-4">Sign up</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group row">
              <div class="col-md-6">
                <%= f.label :first_name %>
                <%= f.text_field :first_name, class: "form-control rounded-0" %>
              </div>
              <div class="col-md-6">
                <%= f.label :last_name %>
                <%= f.text_field :last_name, class: "form-control rounded-0" %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-md-6">
                <%= f.label :username %>
                <%= f.text_field :username, class: "form-control rounded-0" %>
              </div>
              <div class="col-md-6">
                <%= f.label :contact_number %>
                <%= f.text_field :contact, class: "form-control rounded-0" %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-md-6">
                <%= f.label :email %>
                <%= f.email_field :email, class: "form-control rounded-0" %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-md-6">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control rounded-0" %>
              </div>
              <div class="col-md-6">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control rounded-0" %>
              </div>
            </div>

            <div class="form-group text-center mt-4">
              <%= f.submit "Sign up", class: "btn btn-primary rounded-0" %>
              <p class="lead mt-2">Already have an account? Please <%= link_to "Log in", new_session_path(resource_name) %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

