<div class="container">
  <div class="row">
    <div class="col-md-5 mx-md-auto">
      <div class="card shadow rounded-0 mt-5 mb-5">
        <div class="card-body">
          <h2 class="text-center mb-4">Forgot your password?</h2>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded-0" %>
            </div>

            <div class="form-group">
              <%= f.submit "Send me reset password instructions", class: "btn btn-primary rounded-0 btn-block" %>
            </div>
          <% end %>
          <p class="lead"><%= link_to "Log in", new_session_path(resource_name) %> | <%= link_to "Register", new_registration_path(resource_name) %></p>
        </div>
      </div>
    </div>
  </div>
</div>
